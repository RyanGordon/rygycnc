{
	"manifest_version": 2,
	"minimum_chrome_version": "33",
	"name": "RYGY CNC",
	"description": "Interface for the RYGY CNC Controller",
	"version": "0.1",
	"permissions": [
		"serial",
		"storage",
		{
			"fileSystem": [
				"write",
				"retainEntries",
				"directory"
			]
		}
	],
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"icons": { "16": "rygycnc-16.png", "128": "rygycnc-128.png" }
}